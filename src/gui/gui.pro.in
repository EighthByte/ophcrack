VPATH = @srcdir@

TEMPLATE = app
CONFIG += warn_on release @HAVE_DEBUG_TRUE@debug

TARGET = ophcrack
DESTDIR = ..

DEPENDPATH += @srcdir@

INCLUDEPATH += @srcdir@ @srcdir@/.. @srcdir@/../ntproba


LIBS += ../libophcrack.a ../samdump2/libsamdump2.a @LDFLAGS@ @LIBS@ 

QMAKE_CFLAGS += @CFLAGS@
QMAKE_CXXFLAGS += @CXXFLAGS@

# Input

HEADERS += ui_ophcrackgui.h \
           ophcrackgui.h \
           hashmodel.h \
           tablemodel.h \
           progdelegate.h \
           ui_tabledialog.h \
           tabledialog.h \
           singlehashdialog.h \
           hashview.h \
           samdialog.h \
           aboutdialog.h \
           helpdialog.h \
@HAVE_QWT_TRUE@           graphdialog.h \
@HAVE_QWT_TRUE@           histogram_item.h \
           exportdialog.h 

FORMS += ophcrackgui.ui \
         tabledialog.ui \
         singlehashdialog.ui \
         samdialog.ui \
         aboutdialog.ui \
         helpdialog.ui \
@HAVE_QWT_TRUE@         graphdialog.ui \
         exportdialog.ui 

SOURCES += main.cpp \
           ophcrackgui.cpp \
           hashmodel.cpp \
           tablemodel.cpp \
           progdelegate.cpp \
           tabledialog.cpp \
           singlehashdialog.cpp \
           hashview.cpp \
           samdialog.cpp \
           aboutdialog.cpp \
           helpdialog.cpp \
@HAVE_QWT_TRUE@           graphdialog.cpp \
@HAVE_QWT_TRUE@           histogram_item.cpp \
           exportdialog.cpp 

RESOURCES += gui.qrc

RC_FILE += ophcrack_win32.rc

mac {
    ICON = ophcrack.icns   
    QMAKE_INFO_PLIST = Info.plist
}
